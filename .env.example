# ------------------------------------------------------------
# Application
# ------------------------------------------------------------
# Name of the application shown in UI elements.
NEXT_PUBLIC_APP_NAME=CTOTextPro
# Canonical site URL for public links (used client-side).
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Base URL used by NextAuth for callback URLs.
NEXTAUTH_URL=http://localhost:3000
# Random 32+ character secret for NextAuth JWT/signing.
NEXTAUTH_SECRET=replace-with-a-strong-random-string
# Node environment (development, production, etc.).
NODE_ENV=development

# ------------------------------------------------------------
# Database (Supabase Postgres)
# ------------------------------------------------------------
# Connection string for Prisma/Supabase migrations (local default shown).
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
# Supabase project REST API URL.
SUPABASE_URL=https://YOUR_SUPABASE_PROJECT.supabase.co
# Service-role key (server-side only, keep secret!).
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# Public anon key for client access.
SUPABASE_ANON_KEY=your-anon-key
# JWT secret that matches the Supabase project configuration.
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
# Public URL for Supabase (duplicate of SUPABASE_URL but exposed to the client).
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_SUPABASE_PROJECT.supabase.co
# Public anon key exposed to the client.
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ------------------------------------------------------------
# Redis (Upstash)
# ------------------------------------------------------------
# Redis connection string (rediss://...) for server-side usage.
UPSTASH_REDIS_URL=rediss://default:YOUR_UPSTASH_TOKEN@YOUR_UPSTASH_ENDPOINT
# REST URL for Upstash (used for rate limiting/QStash webhooks).
UPSTASH_REDIS_REST_URL=https://YOUR_UPSTASH_REST_URL
# REST token paired with the REST URL.
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token

# ------------------------------------------------------------
# Firebase
# ------------------------------------------------------------
# Stringified Firebase configuration object copied from the Firebase Console.
# Example: {"apiKey":"...","authDomain":"...","projectId":"...","appId":"...","messagingSenderId":"..."}
NEXT_PUBLIC_FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-project.firebaseapp.com","projectId":"your-project-id","appId":"your-app-id","messagingSenderId":"your-sender-id"}

# ------------------------------------------------------------
# AI Providers
# ------------------------------------------------------------
# Groq API key used for chat/evaluate edge functions.
GROQ_API_KEY=your-groq-api-key

# ------------------------------------------------------------
# File Uploads
# ------------------------------------------------------------
# Maximum upload size in bytes (25 MB default).
UPLOADS_MAX_FILE_SIZE=26214400
# Comma-separated list of allowed MIME types for uploads.
UPLOADS_ALLOWED_MIME_TYPES=image/png,image/jpeg,application/pdf

# ------------------------------------------------------------
# Public URLs & Telemetry (optional)
# ------------------------------------------------------------
# Public documentation URL displayed in the app footer.
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.example.com
# Public status page URL for incident notifications.
NEXT_PUBLIC_STATUS_PAGE_URL=https://status.example.com
